{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "web",
      "build": {
        "watchPatterns": ["**/*"]
      },
      "deploy": {
        "startCommand": "npm start"
      }
    },
    {
      "name": "signaling",
      "build": {
        "context": "./server",
        "watchPatterns": ["server/**/*"]
      },
      "deploy": {
        "startCommand": "node index.js"
      }
    }
  ]
}